<script>

    populateJsTables();

    window.addEventListener("resize", populateJsTables);

    function populateJsTables(){
        var data = getJsData();

        for(index = 0; index < data.length; index++) {
            $('.' + data[index].key).find('.value').text(data[index].value);
        }
    }

    function getJsData() {
        var browserlang = {key:"browser_lang", caption:"Browser taal", value:getBrowserLanguage()};
        var colorDept = {key:"color_dept", caption:"Kleurbereik", value:getScreenColorDept()};
        var availResolution = {key:"avail_resolution", caption:"Beschikbare resolutie", value:getScreenAvailResolution()};
        var resolution = {key:"resolution", caption:"Resolutiie", value:getScreenResolution()};
        var windowSize = {key:"window_size", caption:"Venster formaat", value:getWindowSize()};
        var historyLength = {key:"history_length", caption:"Aantal vorige websites", value:getHistoryLength()};

        return [
            browserlang,
            colorDept,
            availResolution,
            resolution,
            windowSize,
            historyLength
        ];
    }

    function getBrowserLanguage() {
        return navigator.language || navigator.userLanguage;
    }

    function getScreenInfo(){
        return window.screen;
    }

    function getScreenColorDept(){
        return getScreenInfo().colorDepth;
    }

    function getScreenAvailResolution(){
        return getScreenInfo().availWidth + ' X ' + getScreenInfo().availHeight;
    }

    function getScreenResolution(){
        return getScreenInfo().width + ' X ' + getScreenInfo().height;
    }

    function getWindowSize(){
        var d = document, root= d.documentElement, body = d.body;
        var wid = window.innerWidth || root.clientWidth || body.clientWidth;
        var hi= window.innerHeight || root.clientHeight || body.clientHeight;

        return wid + ' X ' + hi;
    }

    function getHistoryLength() {
        return  window.history.length;
    }


</script>